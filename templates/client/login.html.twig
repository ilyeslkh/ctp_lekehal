{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Se connecter</h1>
    <form method="post">
        {% if error %}
            <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <label for="email" class="block mb-2">Email</label>
        <input type="email" id="email" name="email" class="border rounded px-3 py-2 w-full" value="{{ last_username }}" required>
        <label for="password" class="block mb-2 mt-4">Mot de passe</label>
        <input type="password" id="password" name="password" class="border rounded px-3 py-2 w-full" required>
        <button class="bg-blue-500 text-white px-4 py-2 rounded mt-4">Connexion</button>
    </form>
    <a href="{{ path('app_forgot_password_request') }}" class="text-blue-500 mt-4 block">Mot de passe oubli√© ?</a>
{% endblock %}
