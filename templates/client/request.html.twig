{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Réinitialiser votre mot de passe</h1>
    <form method="post">
        <label for="email" class="block mb-2">Email</label>
        <input type="email" id="email" name="email" class="border rounded px-3 py-2 w-full" required>
        <button class="bg-blue-500 text-white px-4 py-2 rounded mt-4">Envoyer</button>
    </form>
{% endblock %}
