{% extends 'base.html.twig' %}

{% block title %}Page d'Accueil{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Gestion de Projets</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Clients Section -->
        <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Clients</h2>
            <ul>
                {% for client in clients %}
                    <li class="flex justify-between items-center mb-4">
                        <div>
                            <p class="text-xl">{{ client.name }}</p>
                            <p class="text-gray-600">{{ client.email }}</p>
                        </div>
                        <a href="{{ path('client_show', {'id': client.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded">Voir</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Projects Section -->
        <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Projets</h2>
            <ul>
                {% for project in projects %}
                    <li class="flex justify-between items-center mb-4">
                        <div>
                            <p class="text-xl">{{ project.title }}</p>
                            <p class="text-gray-600">{{ project.description }}</p>
                        </div>
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded">Voir</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Deliverables Section -->
        <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Livrables</h2>
            <ul>
                {% for deliverable in deliverables %}
                    <li class="flex justify-between items-center mb-4">
                        <div>
                            <p class="text-xl">{{ deliverable.name }}</p>
                            <p class="text-gray-600">{{ deliverable.type }}</p>
                        </div>
                        <a href="{{ path('deliverable_show', {'id': deliverable.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded">Voir</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
